{% extends 'base.html.twig' %}

{% block title %}Recherche : “{{ current_search }}”{% endblock %}

{% block body %}

<div class="album py-5 bg-light">
    <div class="container">
        <h1>Résultats de recherche : “{{ current_search }}”</h1>
        <div class="row">
            {% for team in teams%}
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img class="card-img-top" src="/uploads{{ asset(team.avatarFileName) }}" alt="">
                        <div class="card-body">
                            <h4><a href="{{ path('profile_team', {'teamId': team.id}) }}">{{ team.name }}</a></h4>
                            <div class="d-flex justify-content-between align-items-center">

                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}


