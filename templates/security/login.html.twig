{% extends 'base.html.twig' %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="container" style="width: 40%; margin-left: 30%">
        <h1 style="margin-left: 35%; font-size: 80px;">Login</h1>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <input class="form-control form-control-lg" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Email" />
            </div>

            <div class="form-group">
                <input class="form-control form-control-lg" type="password" id="password" name="_password" placeholder="Password"/>
            </div>

            <button class="btn btn-primary" style="width: 100%" type="submit">Login</button>
         </form>
        <div class="container"><a class="nav-link" href="{{ path('registration') }}">Cr√©er un compte</a></div>
    </div>
{% endblock %}

